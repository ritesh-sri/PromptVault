<Window x:Class="PromptVault.Dialogs.PromptDetailDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Prompt Details"
        Height="650"
        Width="800"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}"
        ResizeMode="CanResize">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock x:Name="TitleText"
                           Text="Prompt Title"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="{DynamicResource TextBrush}"
                           TextWrapping="Wrap"/>

                <TextBlock x:Name="SubtitleText"
                           Text="Created on Jan 1, 2025"
                           FontSize="13"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           Margin="0,8,0,0"/>
            </StackPanel>

            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock x:Name="FavoriteIcon"
                           Text="⭐"
                           FontSize="32"
                           Visibility="Collapsed"
                           ToolTip="Favorite Prompt"/>
            </StackPanel>
        </Grid>

        <!-- Metadata Section -->
        <Border Grid.Row="1"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="10"
                Padding="20"
                Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- AI Provider & Model -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="AI Platform"
                               FontSize="11"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               Margin="0,0,0,6"/>
                    <Border x:Name="ModelBadge"
                            Background="#2196F3"
                            CornerRadius="8"
                            Padding="12,8"
                            HorizontalAlignment="Left">
                        <TextBlock x:Name="ModelText"
                                   Text="GPT-4"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="White"/>
                    </Border>
                </StackPanel>

                <!-- Usage Statistics -->
                <StackPanel Grid.Column="1">
                    <TextBlock Text="Usage"
                               FontSize="11"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               Margin="0,0,0,6"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📊 "
                                   FontSize="16"
                                   VerticalAlignment="Center"/>
                        <TextBlock x:Name="UsageText"
                                   Text="Used 5 times"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>

                <!-- Token & Cost Info -->
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Estimated Cost"
                               FontSize="11"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               Margin="0,0,0,6"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="💰 "
                                   FontSize="16"
                                   VerticalAlignment="Center"/>
                        <TextBlock x:Name="TokenCostText"
                                   Text="~500 tokens • $0.0025"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="#4CAF50"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Tags Section -->
        <WrapPanel Grid.Row="2" 
                   x:Name="TagsPanel"
                   Orientation="Horizontal"
                   Margin="0,0,0,20"
                   VerticalAlignment="Top"/>

        <!-- Content Section -->
        <Border Grid.Row="2"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="10"
                Padding="20"
                Margin="0,50,0,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Prompt Content"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextBrush}"
                           Margin="0,0,0,12"/>

                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <TextBox x:Name="ContentTextBox"
                             Text="Prompt content goes here..."
                             FontSize="14"
                             Foreground="{DynamicResource TextBrush}"
                             Background="Transparent"
                             BorderThickness="0"
                             TextWrapping="Wrap"
                             IsReadOnly="True"
                             FontFamily="Segoe UI, Consolas"
                             Padding="0"
                             Cursor="Arrow"/>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Action Buttons -->
        <Border Grid.Row="4"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="0,20,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left side buttons -->
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal"
                            HorizontalAlignment="Left">
                    <Button x:Name="ToggleFavoriteButton"
                            Content="⭐ Toggle Favorite"
                            Style="{DynamicResource SecondaryButtonStyle}"
                            Padding="15,10"
                            Margin="0,0,10,0"
                            Click="ToggleFavoriteButton_Click"/>

                    <Button x:Name="EditButton"
                            Content="✏️ Edit"
                            Style="{DynamicResource SecondaryButtonStyle}"
                            Padding="15,10"
                            Click="EditButton_Click"/>
                </StackPanel>

                <!-- Right side buttons -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button x:Name="CopyButton"
                            Content="📋 Copy to Clipboard"
                            Style="{DynamicResource PrimaryButtonStyle}"
                            Padding="20,10"
                            Margin="0,0,10,0"
                            Click="CopyButton_Click"/>

                    <Button x:Name="CloseButton"
                            Content="Close"
                            Style="{DynamicResource SecondaryButtonStyle}"
                            Padding="20,10"
                            Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>