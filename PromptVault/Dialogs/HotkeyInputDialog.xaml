<Window x:Class="PromptVault.Dialogs.HotkeyInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Hotkey" Height="280" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        KeyDown="Window_KeyDown">

    <Window.Resources>
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        </Style>
    </Window.Resources>

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="⌨️ Press New Hotkey" FontSize="22" FontWeight="Bold"
                       Foreground="{DynamicResource TextBrush}" HorizontalAlignment="Center"/>
            <TextBlock Text="Press any key combination (e.g., Ctrl+Shift+V)"
                       FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}"
                       HorizontalAlignment="Center" Margin="0,8,0,0"/>
        </StackPanel>

        <!-- Hotkey Display -->
        <Border Grid.Row="1" Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource AccentBrush}"
                BorderThickness="2"
                CornerRadius="12"
                Padding="20">
            <StackPanel VerticalAlignment="Center">
                <TextBlock x:Name="HotkeyDisplay"
                           Text="Press a key..."
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="{DynamicResource TextBrush}"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"/>

                <TextBlock x:Name="StatusText"
                           Text="Waiting for input"
                           FontSize="12"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,12,0,0"/>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,24,0,0">
            <Button Content="Cancel"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Width="120"
                    Margin="0,0,12,0"
                    Click="CancelButton_Click"/>
            <Button x:Name="OkButton"
                    Content="Set Hotkey"
                    Style="{StaticResource ModernButtonStyle}"
                    Width="140"
                    IsEnabled="False"
                    Click="OkButton_Click"/>
        </StackPanel>
    </Grid>
</Window>