<Window x:Class="PromptVault.Dialogs.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="600" Width="700"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}"
        ResizeMode="CanResize"
        MinHeight="500" MinWidth="600">

    <Window.Resources>
        <!-- Fallback brushes for dynamic resources -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="White"/>
        <SolidColorBrush x:Key="TextBrush" Color="#333333"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#666666"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#0078D4"/>

        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="4,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <Style x:Key="SettingItemStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="⚙️ Settings" FontSize="24" FontWeight="SemiBold" 
                       Foreground="{DynamicResource TextBrush}"/>
            <TextBlock Text="Customize your PromptVault experience" 
                       FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}" 
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- General Settings -->
                <TextBlock Text="General" Style="{StaticResource SectionHeaderStyle}"/>

                <!-- Theme Setting -->
                <Border Style="{StaticResource SettingItemStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Theme" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="{DynamicResource TextBrush}"/>
                            <TextBlock Text="Choose between light and dark theme" 
                                       FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" 
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                        <ComboBox Grid.Column="1" x:Name="ThemeComboBox" Width="150" 
                                  VerticalAlignment="Center">
                            <ComboBoxItem Content="Light" IsSelected="True"/>
                            <ComboBoxItem Content="Dark"/>
                            <ComboBoxItem Content="System Default"/>
                        </ComboBox>
                    </Grid>
                </Border>

                <!-- Startup Setting -->
                <Border Style="{StaticResource SettingItemStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Start with Windows" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="{DynamicResource TextBrush}"/>
                            <TextBlock Text="Launch PromptVault automatically on startup" 
                                       FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" 
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                        <CheckBox Grid.Column="1" x:Name="StartupCheckBox" 
                                  VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Minimize to Tray -->
                <Border Style="{StaticResource SettingItemStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Minimize to System Tray" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="{DynamicResource TextBrush}"/>
                            <TextBlock Text="Keep running in background when closed" 
                                       FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" 
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                        <CheckBox Grid.Column="1" x:Name="MinimizeToTrayCheckBox" 
                                  VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Hotkeys Section -->
                <TextBlock Text="Keyboard Shortcuts" Style="{StaticResource SectionHeaderStyle}" 
                           Margin="0,24,0,16"/>

                <!-- Open App Hotkey -->
                <Border Style="{StaticResource SettingItemStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0">
                            <TextBlock Text="Open PromptVault" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="{DynamicResource TextBrush}"/>
                            <TextBlock Text="Global hotkey to open the application" 
                                       FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" 
                                       Margin="0,4,0,0"/>
                        </StackPanel>

                        <Grid Grid.Row="1" Margin="0,12,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" x:Name="OpenHotkeyTextBox" 
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     Text="Ctrl + Shift + V" IsReadOnly="True"
                                     Margin="0,0,12,0"/>
                            <Button Grid.Column="1" Content="Change" 
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Width="100" Click="ChangeOpenHotkey_Click"/>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Clipboard Capture Hotkey -->
                <Border Style="{StaticResource SettingItemStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0">
                            <TextBlock Text="Quick Capture from Clipboard" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="{DynamicResource TextBrush}"/>
                            <TextBlock Text="Hotkey to quickly save clipboard content" 
                                       FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" 
                                       Margin="0,4,0,0"/>
                        </StackPanel>

                        <Grid Grid.Row="1" Margin="0,12,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" x:Name="ClipboardHotkeyTextBox" 
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     Text="Ctrl + Shift + C" IsReadOnly="True"
                                     Margin="0,0,12,0"/>
                            <Button Grid.Column="1" Content="Change" 
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Width="100" Click="ChangeClipboardHotkey_Click"/>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Database Section -->
                <TextBlock Text="Data &amp; Storage" Style="{StaticResource SectionHeaderStyle}" 
                           Margin="0,24,0,16"/>

                <!-- Database Location -->
                <Border Style="{StaticResource SettingItemStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0">
                            <TextBlock Text="Database Location" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="{DynamicResource TextBrush}"/>
                            <TextBlock x:Name="DatabasePathText" 
                                       Text="%AppData%\PromptVault\prompts.db" 
                                       FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" 
                                       Margin="0,4,0,0" TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,12,0,0">
                            <Button Content="📂 Open Folder" 
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Margin="0,0,8,0" Click="OpenDatabaseFolder_Click"/>
                            <Button Content="📦 Backup Database" 
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Margin="0,0,8,0" Click="BackupDatabase_Click"/>
                            <Button Content="📥 Restore Backup" 
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Click="RestoreDatabase_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Export/Import -->
                <Border Style="{StaticResource SettingItemStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0">
                            <TextBlock Text="Export &amp; Import" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="{DynamicResource TextBrush}"/>
                            <TextBlock Text="Export all prompts or import from backup" 
                                       FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" 
                                       Margin="0,4,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,12,0,0">
                            <Button Content="📤 Export All (CSV)" 
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Margin="0,0,8,0" Click="ExportAllCSV_Click"/>
                            <Button Content="📤 Export All (TXT)" 
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Click="ExportAllTXT_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- About Section -->
                <TextBlock Text="About" Style="{StaticResource SectionHeaderStyle}" 
                           Margin="0,24,0,16"/>

                <Border Style="{StaticResource SettingItemStyle}">
                    <StackPanel>
                        <TextBlock Text="PromptVault v0.1.0" FontSize="16" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextBrush}"/>
                        <TextBlock Text="Open-source AI Prompt Manager for Windows" 
                                   FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" 
                                   Margin="0,4,0,12"/>
                        <StackPanel Orientation="Horizontal">
                            <Button Content="📖 Documentation" 
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Margin="0,0,8,0" Click="OpenDocumentation_Click"/>
                            <Button Content="🐛 Report Bug" 
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Margin="0,0,8,0" Click="ReportBug_Click"/>
                            <Button Content="⭐ Star on GitHub" 
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Click="StarOnGitHub_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="ResetButton" Content="Reset to Defaults" 
                    Style="{StaticResource SecondaryButtonStyle}" 
                    Width="150" Margin="0,0,12,0"
                    Click="ResetButton_Click"/>
            <Button x:Name="SaveButton" Content="💾 Save Changes" 
                    Style="{StaticResource ModernButtonStyle}" 
                    Width="150"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>