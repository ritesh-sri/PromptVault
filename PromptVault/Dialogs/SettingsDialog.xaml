<Window x:Class="PromptVault.Dialogs.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="700" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}"
        ResizeMode="CanResize"
        MinHeight="600" MinWidth="800">

	<Window.Resources>
		<!-- Modern Gradient Brushes -->
		<LinearGradientBrush x:Key="AccentGradient" StartPoint="0,0" EndPoint="1,1">
			<GradientStop Color="#667eea" Offset="0"/>
			<GradientStop Color="#764ba2" Offset="1"/>
		</LinearGradientBrush>

		<LinearGradientBrush x:Key="SuccessGradient" StartPoint="0,0" EndPoint="1,1">
			<GradientStop Color="#56ab2f" Offset="0"/>
			<GradientStop Color="#a8e063" Offset="1"/>
		</LinearGradientBrush>

		<LinearGradientBrush x:Key="DangerGradient" StartPoint="0,0" EndPoint="1,1">
			<GradientStop Color="#eb3349" Offset="0"/>
			<GradientStop Color="#f45c43" Offset="1"/>
		</LinearGradientBrush>

		<LinearGradientBrush x:Key="InfoGradient" StartPoint="0,0" EndPoint="1,1">
			<GradientStop Color="#4facfe" Offset="0"/>
			<GradientStop Color="#00f2fe" Offset="1"/>
		</LinearGradientBrush>

		<!-- Modern Text Box Style -->
		<Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
			<Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
			<Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
			<Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
			<Setter Property="BorderThickness" Value="2"/>
			<Setter Property="Padding" Value="14,10"/>
			<Setter Property="FontSize" Value="14"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="TextBox">
						<Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
							<ScrollViewer x:Name="PART_ContentHost" Margin="4,0"/>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsFocused" Value="True">
								<Setter Property="BorderBrush" Value="{StaticResource AccentGradient}"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

		<!-- Modern Button Style -->
		<Style x:Key="ModernButtonStyle" TargetType="Button">
			<Setter Property="Background" Value="{StaticResource AccentGradient}"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="Padding" Value="24,12"/>
			<Setter Property="FontSize" Value="14"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
			<Setter Property="Cursor" Value="Hand"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="Opacity" Value="0.85"/>
				</Trigger>
				<Trigger Property="IsPressed" Value="True">
					<Setter Property="Opacity" Value="0.7"/>
				</Trigger>
			</Style.Triggers>
		</Style>

		<!-- Secondary Button Style -->
		<Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
			<Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
			<Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
			<Setter Property="BorderThickness" Value="2"/>
			<Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
		</Style>

		<!-- Success Button Style -->
		<Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
			<Setter Property="Background" Value="{StaticResource SuccessGradient}"/>
		</Style>

		<!-- Danger Button Style -->
		<Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
			<Setter Property="Background" Value="{StaticResource DangerGradient}"/>
		</Style>

		<!-- Modern Card Style -->
		<Style x:Key="SettingCardStyle" TargetType="Border">
			<Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
			<Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="CornerRadius" Value="16"/>
			<Setter Property="Padding" Value="24"/>
			<Setter Property="Margin" Value="0,0,0,16"/>
			<Setter Property="Effect">
				<Setter.Value>
					<DropShadowEffect Color="#000000" Opacity="0.05" BlurRadius="20" ShadowDepth="0"/>
				</Setter.Value>
			</Setter>
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="Effect">
						<Setter.Value>
							<DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="30" ShadowDepth="0"/>
						</Setter.Value>
					</Setter>
				</Trigger>
			</Style.Triggers>
		</Style>

		<!-- Section Header Style -->
		<Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
			<Setter Property="FontSize" Value="22"/>
			<Setter Property="FontWeight" Value="Bold"/>
			<Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
			<Setter Property="Margin" Value="0,24,0,16"/>
		</Style>

		<!-- Modern Toggle Switch Style -->
		<Style x:Key="ModernToggleStyle" TargetType="CheckBox">
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="CheckBox">
						<Grid>
							<Border x:Name="Track"
                                    Width="52" Height="28"
                                    CornerRadius="14"
                                    Background="#E0E0E0"
                                    HorizontalAlignment="Right"/>
							<Border x:Name="Thumb"
                                    Width="22" Height="22"
                                    CornerRadius="11"
                                    Background="White"
                                    HorizontalAlignment="Right"
                                    Margin="3">
								<Border.Effect>
									<DropShadowEffect Color="#000000" Opacity="0.2" BlurRadius="6" ShadowDepth="1"/>
								</Border.Effect>
							</Border>
						</Grid>
						<ControlTemplate.Triggers>
							<Trigger Property="IsChecked" Value="True">
								<Setter TargetName="Track" Property="Background" Value="{StaticResource AccentGradient}"/>
								<Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
								<Setter TargetName="Thumb" Property="Margin" Value="27,3,3,3"/>
							</Trigger>
							<Trigger Property="IsChecked" Value="False">
								<Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Left"/>
								<Setter TargetName="Thumb" Property="Margin" Value="3,3,27,3"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

		<!-- Modern ComboBox Style -->
		<Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
			<Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
			<Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
			<Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
			<Setter Property="BorderThickness" Value="2"/>
			<Setter Property="Padding" Value="14,10"/>
			<Setter Property="FontSize" Value="14"/>
		</Style>
	</Window.Resources>

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="240"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<!-- Left Sidebar Navigation -->
		<Border Grid.Column="0" Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,1,0"
                Padding="20">
			<StackPanel>
				<TextBlock Text="⚙️ Settings" FontSize="24" FontWeight="Bold"
                           Foreground="{DynamicResource TextBrush}" Margin="0,0,0,32"/>

				<Button x:Name="GeneralNavButton" Content="🎨 General"
                        Style="{StaticResource SecondaryButtonStyle}"
                        HorizontalAlignment="Stretch" Margin="0,0,0,12"
                        Click="NavigateToGeneral_Click"/>

				<Button x:Name="HotkeysNavButton" Content="⌨️ Hotkeys"
                        Style="{StaticResource SecondaryButtonStyle}"
                        HorizontalAlignment="Stretch" Margin="0,0,0,12"
                        Click="NavigateToHotkeys_Click"/>

				<Button x:Name="DataNavButton" Content="💾 Data"
                        Style="{StaticResource SecondaryButtonStyle}"
                        HorizontalAlignment="Stretch" Margin="0,0,0,12"
                        Click="NavigateToData_Click"/>

				<Button x:Name="AboutNavButton" Content="ℹ️ About"
                        Style="{StaticResource SecondaryButtonStyle}"
                        HorizontalAlignment="Stretch" Margin="0,0,0,12"
                        Click="NavigateToAbout_Click"/>
			</StackPanel>
		</Border>

		<!-- Right Content Area -->
		<Grid Grid.Column="1">
			<Grid.RowDefinitions>
				<RowDefinition Height="*"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>

			<!-- Content Panels -->
			<ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Padding="32">
				<StackPanel>
					<!-- General Settings Panel -->
					<StackPanel x:Name="GeneralPanel" Visibility="Visible">
						<TextBlock Text="General Settings" Style="{StaticResource SectionHeaderStyle}"/>

						<!-- Theme Setting -->
						<Border Style="{StaticResource SettingCardStyle}">
							<Grid>
								<Grid.RowDefinitions>
									<RowDefinition Height="Auto"/>
									<RowDefinition Height="Auto"/>
								</Grid.RowDefinitions>

								<Grid Grid.Row="0">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="Auto"/>
										<ColumnDefinition Width="*"/>
										<ColumnDefinition Width="Auto"/>
									</Grid.ColumnDefinitions>

									<Border Grid.Column="0" Background="{StaticResource AccentGradient}"
                                            Width="48" Height="48" CornerRadius="12" Margin="0,0,16,0">
										<TextBlock Text="🎨" FontSize="24"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
									</Border>

									<StackPanel Grid.Column="1" VerticalAlignment="Center">
										<TextBlock Text="Appearance Theme" FontSize="16" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextBrush}"/>
										<TextBlock Text="Choose your preferred color scheme"
                                                   FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}"
                                                   Margin="0,4,0,0"/>
									</StackPanel>

									<ComboBox Grid.Column="2" x:Name="ThemeComboBox"
                                              Style="{StaticResource ModernComboBoxStyle}"
                                              Width="180" VerticalAlignment="Center">
										<ComboBoxItem Content="☀️ Light Theme"/>
										<ComboBoxItem Content="🌙 Dark Theme" IsSelected="True"/>
										<ComboBoxItem Content="💻 System Default"/>
									</ComboBox>
								</Grid>
							</Grid>
						</Border>

						<!-- Startup Setting -->
						<Border Style="{StaticResource SettingCardStyle}">
							<Grid>
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="Auto"/>
									<ColumnDefinition Width="*"/>
									<ColumnDefinition Width="Auto"/>
								</Grid.ColumnDefinitions>

								<Border Grid.Column="0" Background="{StaticResource InfoGradient}"
                                        Width="48" Height="48" CornerRadius="12" Margin="0,0,16,0">
									<TextBlock Text="🚀" FontSize="24"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
								</Border>

								<StackPanel Grid.Column="1" VerticalAlignment="Center">
									<TextBlock Text="Launch at Startup" FontSize="16" FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextBrush}"/>
									<TextBlock Text="Automatically start PromptVault when Windows starts"
                                               FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}"
                                               Margin="0,4,0,0"/>
								</StackPanel>

								<CheckBox Grid.Column="2" x:Name="StartupCheckBox"
                                          Style="{StaticResource ModernToggleStyle}"
                                          VerticalAlignment="Center"/>
							</Grid>
						</Border>

						<!-- System Tray Setting -->
						<Border Style="{StaticResource SettingCardStyle}">
							<Grid>
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="Auto"/>
									<ColumnDefinition Width="*"/>
									<ColumnDefinition Width="Auto"/>
								</Grid.ColumnDefinitions>

								<Border Grid.Column="0" Background="{StaticResource SuccessGradient}"
                                        Width="48" Height="48" CornerRadius="12" Margin="0,0,16,0">
									<TextBlock Text="📌" FontSize="24"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
								</Border>

								<StackPanel Grid.Column="1" VerticalAlignment="Center">
									<TextBlock Text="Minimize to System Tray" FontSize="16" FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextBrush}"/>
									<TextBlock Text="Keep PromptVault running in the background"
                                               FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}"
                                               Margin="0,4,0,0"/>
								</StackPanel>

								<CheckBox Grid.Column="2" x:Name="MinimizeToTrayCheckBox"
                                          Style="{StaticResource ModernToggleStyle}"
                                          VerticalAlignment="Center"/>
							</Grid>
						</Border>

						<!-- Auto Backup Setting -->
						<Border Style="{StaticResource SettingCardStyle}">
							<Grid>
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="Auto"/>
									<ColumnDefinition Width="*"/>
									<ColumnDefinition Width="Auto"/>
								</Grid.ColumnDefinitions>

								<Border Grid.Column="0" Background="#f093fb"
                                        Width="48" Height="48" CornerRadius="12" Margin="0,0,16,0">
									<TextBlock Text="🔄" FontSize="24"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
								</Border>

								<StackPanel Grid.Column="1" VerticalAlignment="Center">
									<TextBlock Text="Automatic Backups" FontSize="16" FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextBrush}"/>
									<TextBlock Text="Create daily backups of your prompts automatically"
                                               FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}"
                                               Margin="0,4,0,0"/>
								</StackPanel>

								<CheckBox Grid.Column="2" x:Name="AutoBackupCheckBox"
                                          Style="{StaticResource ModernToggleStyle}"
                                          VerticalAlignment="Center" IsChecked="True"/>
							</Grid>
						</Border>
					</StackPanel>

					<!-- Hotkeys Panel -->
					<StackPanel x:Name="HotkeysPanel" Visibility="Collapsed">
						<TextBlock Text="Keyboard Shortcuts" Style="{StaticResource SectionHeaderStyle}"/>

						<!-- Open App Hotkey -->
						<Border Style="{StaticResource SettingCardStyle}">
							<StackPanel>
								<Grid Margin="0,0,0,16">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="Auto"/>
										<ColumnDefinition Width="*"/>
									</Grid.ColumnDefinitions>

									<Border Grid.Column="0" Background="{StaticResource AccentGradient}"
                                            Width="48" Height="48" CornerRadius="12" Margin="0,0,16,0">
										<TextBlock Text="🔓" FontSize="24"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
									</Border>

									<StackPanel Grid.Column="1" VerticalAlignment="Center">
										<TextBlock Text="Open PromptVault" FontSize="16" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextBrush}"/>
										<TextBlock Text="Global hotkey to show the application window"
                                                   FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}"
                                                   Margin="0,4,0,0"/>
									</StackPanel>
								</Grid>

								<Grid>
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="*"/>
										<ColumnDefinition Width="Auto"/>
									</Grid.ColumnDefinitions>

									<TextBox Grid.Column="0" x:Name="OpenHotkeyTextBox"
                                             Style="{StaticResource ModernTextBoxStyle}"
                                             Text="Ctrl + Shift + V" IsReadOnly="True"
                                             Margin="0,0,12,0" FontWeight="SemiBold"/>
									<Button Grid.Column="1" Content="✏️ Change"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Width="120" Click="ChangeOpenHotkey_Click"/>
								</Grid>
							</StackPanel>
						</Border>

						<!-- Clipboard Capture Hotkey -->
						<Border Style="{StaticResource SettingCardStyle}">
							<StackPanel>
								<Grid Margin="0,0,0,16">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="Auto"/>
										<ColumnDefinition Width="*"/>
									</Grid.ColumnDefinitions>

									<Border Grid.Column="0" Background="{StaticResource SuccessGradient}"
                                            Width="48" Height="48" CornerRadius="12" Margin="0,0,16,0">
										<TextBlock Text="📋" FontSize="24"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
									</Border>

									<StackPanel Grid.Column="1" VerticalAlignment="Center">
										<TextBlock Text="Quick Capture from Clipboard" FontSize="16" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextBrush}"/>
										<TextBlock Text="Instantly save clipboard content as a new prompt"
                                                   FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}"
                                                   Margin="0,4,0,0"/>
									</StackPanel>
								</Grid>

								<Grid>
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="*"/>
										<ColumnDefinition Width="Auto"/>
									</Grid.ColumnDefinitions>

									<TextBox Grid.Column="0" x:Name="ClipboardHotkeyTextBox"
                                             Style="{StaticResource ModernTextBoxStyle}"
                                             Text="Ctrl + Shift + C" IsReadOnly="True"
                                             Margin="0,0,12,0" FontWeight="SemiBold"/>
									<Button Grid.Column="1" Content="✏️ Change"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Width="120" Click="ChangeClipboardHotkey_Click"/>
								</Grid>
							</StackPanel>
						</Border>
					</StackPanel>

					<!-- Data Panel -->
					<StackPanel x:Name="DataPanel" Visibility="Collapsed">
						<TextBlock Text="Data &amp; Storage" Style="{StaticResource SectionHeaderStyle}"/>

						<!-- Database Info -->
						<Border Style="{StaticResource SettingCardStyle}">
							<StackPanel>
								<Grid Margin="0,0,0,16">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="Auto"/>
										<ColumnDefinition Width="*"/>
									</Grid.ColumnDefinitions>

									<Border Grid.Column="0" Background="{StaticResource InfoGradient}"
                                            Width="48" Height="48" CornerRadius="12" Margin="0,0,16,0">
										<TextBlock Text="💾" FontSize="24"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
									</Border>

									<StackPanel Grid.Column="1" VerticalAlignment="Center">
										<TextBlock Text="Database Location" FontSize="16" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextBrush}"/>
										<TextBlock x:Name="DatabasePathText"
                                                   Text="%AppData%\PromptVault\prompts.db"
                                                   FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}"
                                                   Margin="0,4,0,0" TextWrapping="Wrap"/>
									</StackPanel>
								</Grid>

								<StackPanel Orientation="Horizontal">
									<Button Content="📂 Open Folder"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Margin="0,0,12,0" Click="OpenDatabaseFolder_Click"/>
									<Button Content="📦 Backup"
                                            Style="{StaticResource SuccessButtonStyle}"
                                            Margin="0,0,12,0" Click="BackupDatabase_Click"/>
									<Button Content="📥 Restore"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Click="RestoreDatabase_Click"/>
								</StackPanel>
							</StackPanel>
						</Border>

						<!-- Export Options -->
						<Border Style="{StaticResource SettingCardStyle}">
							<StackPanel>
								<Grid Margin="0,0,0,16">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="Auto"/>
										<ColumnDefinition Width="*"/>
									</Grid.ColumnDefinitions>

									<Border Grid.Column="0" Background="{StaticResource AccentGradient}"
                                            Width="48" Height="48" CornerRadius="12" Margin="0,0,16,0">
										<TextBlock Text="📤" FontSize="24"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
									</Border>

									<StackPanel Grid.Column="1" VerticalAlignment="Center">
										<TextBlock Text="Export Your Prompts" FontSize="16" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextBrush}"/>
										<TextBlock Text="Save all your prompts to external files"
                                                   FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}"
                                                   Margin="0,4,0,0"/>
									</StackPanel>
								</Grid>

								<StackPanel Orientation="Horizontal">
									<Button Content="📊 Export CSV"
                                            Style="{StaticResource SuccessButtonStyle}"
                                            Margin="0,0,12,0" Click="ExportAllCSV_Click"/>
									<Button Content="📄 Export TXT"
                                            Style="{StaticResource SuccessButtonStyle}"
                                            Click="ExportAllTXT_Click"/>
								</StackPanel>
							</StackPanel>
						</Border>

						<!-- Clear Data -->
						<Border Style="{StaticResource SettingCardStyle}">
							<StackPanel>
								<Grid Margin="0,0,0,16">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="Auto"/>
										<ColumnDefinition Width="*"/>
									</Grid.ColumnDefinitions>

									<Border Grid.Column="0" Background="{StaticResource DangerGradient}"
                                            Width="48" Height="48" CornerRadius="12" Margin="0,0,16,0">
										<TextBlock Text="⚠️" FontSize="24"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
									</Border>

									<StackPanel Grid.Column="1" VerticalAlignment="Center">
										<TextBlock Text="Danger Zone" FontSize="16" FontWeight="SemiBold"
                                                   Foreground="#eb3349"/>
										<TextBlock Text="Permanently delete all prompts and data"
                                                   FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}"
                                                   Margin="0,4,0,0"/>
									</StackPanel>
								</Grid>

								<Button Content="🗑️ Clear All Data"
                                        Style="{StaticResource DangerButtonStyle}"
                                        HorizontalAlignment="Left"
                                        Click="ClearAllData_Click"/>
							</StackPanel>
						</Border>
					</StackPanel>

					<!-- About Panel -->
					<StackPanel x:Name="AboutPanel" Visibility="Collapsed">
						<TextBlock Text="About PromptVault" Style="{StaticResource SectionHeaderStyle}"/>

						<!-- App Info -->
						<Border Style="{StaticResource SettingCardStyle}">
							<StackPanel HorizontalAlignment="Center" Margin="20">
								<TextBlock Text="📦" FontSize="64" HorizontalAlignment="Center" Margin="0,0,0,16"/>
								<TextBlock Text="PromptVault" FontSize="28" FontWeight="Bold"
                                           Foreground="{DynamicResource TextBrush}"
                                           HorizontalAlignment="Center"/>
								<TextBlock Text="Version 0.1.1" FontSize="16"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           HorizontalAlignment="Center" Margin="0,4,0,8"/>
								<TextBlock Text="AI Prompt Manager for Windows" FontSize="14"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           HorizontalAlignment="Center" Margin="0,0,0,32"/>

								<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
									<Button Content="📖 Documentation"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Margin="0,0,12,0" Click="OpenDocumentation_Click"/>
									<Button Content="🐛 Report Bug"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Margin="0,0,12,0" Click="ReportBug_Click"/>
									<Button Content="⭐ GitHub"
                                            Style="{StaticResource SuccessButtonStyle}"
                                            Click="StarOnGitHub_Click"/>
								</StackPanel>
							</StackPanel>
						</Border>

						<!-- Update Check -->
						<Border Style="{StaticResource SettingCardStyle}">
							<StackPanel>
								<Grid Margin="0,0,0,16">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="Auto"/>
										<ColumnDefinition Width="*"/>
										<ColumnDefinition Width="Auto"/>
									</Grid.ColumnDefinitions>

									<Border Grid.Column="0" Background="{StaticResource InfoGradient}"
                                            Width="48" Height="48" CornerRadius="12" Margin="0,0,16,0">
										<TextBlock Text="🔄" FontSize="24"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
									</Border>

									<StackPanel Grid.Column="1" VerticalAlignment="Center">
										<TextBlock Text="Software Updates" FontSize="16" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextBrush}"/>
										<TextBlock Text="Check for the latest version"
                                                   FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}"
                                                   Margin="0,4,0,0"/>
									</StackPanel>

									<Button Grid.Column="2" Content="Check Now"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Click="CheckForUpdates_Click"/>
								</Grid>
							</StackPanel>
						</Border>

						<!-- License & Credits -->
						<Border Style="{StaticResource SettingCardStyle}">
							<StackPanel>
								<TextBlock Text="📜 License" FontSize="16" FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextBrush}" Margin="0,0,0,8"/>
								<TextBlock FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}"
                                           TextWrapping="Wrap">
									<Run Text="PromptVault is open-source software licensed under the MIT License."/>
									<LineBreak/>
									<LineBreak/>
									<Run Text="Made with ❤️ for the AI community"/>
									<LineBreak/>
									<LineBreak/>
									<Run Text="© 2026 PromptVault Swaswas"/>
								</TextBlock>
							</StackPanel>
						</Border>
					</StackPanel>
				</StackPanel>
			</ScrollViewer>

			<!-- Footer Actions -->
			<Border Grid.Row="1" Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0"
                    Padding="32,20">
				<Grid>
					<Button x:Name="ResetButton" Content="🔄 Reset to Defaults"
                            Style="{StaticResource SecondaryButtonStyle}"
                            HorizontalAlignment="Left"
                            Click="ResetButton_Click"/>

					<StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
						<Button x:Name="CancelButton" Content="Cancel"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Width="120" Margin="0,0,12,0"
                                Click="CancelButton_Click"/>
						<Button x:Name="SaveButton" Content="💾 Save Changes"
                                Style="{StaticResource SuccessButtonStyle}"
                                Width="160"
                                Click="SaveButton_Click"/>
					</StackPanel>
				</Grid>
			</Border>
		</Grid>
	</Grid>
</Window>