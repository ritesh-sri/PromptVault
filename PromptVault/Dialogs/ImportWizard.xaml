<Window x:Class="PromptVault.Dialogs.ImportWizardDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Import Prompts Wizard" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}"
        ResizeMode="CanResize"
        MinHeight="500" MinWidth="700">

    <Window.Resources>
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        </Style>

        <Style x:Key="StepCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="12"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Steps -->
        <Border Grid.Row="0" Background="{DynamicResource SurfaceBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1"
                Padding="24,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="📥 Import Prompts Wizard" 
                           FontSize="24" FontWeight="SemiBold" 
                           Foreground="{DynamicResource TextBrush}"/>

                <!-- Step Indicator -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,16,0,0">
                    <!-- Step 1 -->
                    <Border x:Name="Step1Indicator" Background="#2196F3" 
                            Width="80" Height="4" CornerRadius="2" Margin="0,0,8,0"/>
                    <!-- Step 2 -->
                    <Border x:Name="Step2Indicator" Background="#E0E0E0" 
                            Width="80" Height="4" CornerRadius="2" Margin="0,0,8,0"/>
                    <!-- Step 3 -->
                    <Border x:Name="Step3Indicator" Background="#E0E0E0" 
                            Width="80" Height="4" CornerRadius="2"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content Area -->
        <Grid Grid.Row="1">
            <!-- Step 1: Choose Import Type -->
            <Border x:Name="Step1Panel" Style="{StaticResource StepCardStyle}" 
                    Visibility="Visible">
                <StackPanel>
                    <TextBlock Text="Step 1: Choose Import Source" 
                               FontSize="20" FontWeight="SemiBold" 
                               Foreground="{DynamicResource TextBrush}" Margin="0,0,0,8"/>
                    <TextBlock Text="Select where you want to import prompts from" 
                               FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}" 
                               Margin="0,0,0,32"/>

                    <!-- Import Options -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- CSV Import Option -->
                        <Border Grid.Column="0" Style="{StaticResource StepCardStyle}"
                                Cursor="Hand" MouseDown="SelectCSVImport_Click">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="📊" FontSize="48" HorizontalAlignment="Center"/>
                                <TextBlock Text="CSV File" FontSize="18" FontWeight="SemiBold" 
                                           Foreground="{DynamicResource TextBrush}" 
                                           HorizontalAlignment="Center" Margin="0,12,0,8"/>
                                <TextBlock Text="Import from structured CSV file with columns for title, content, AI provider, etc." 
                                           FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" 
                                           TextAlignment="Center" TextWrapping="Wrap"/>
                                <Button Content="Select CSV File" 
                                        Style="{StaticResource ModernButtonStyle}"
                                        Margin="0,20,0,0" Click="SelectCSVImport_Click"/>
                            </StackPanel>
                        </Border>

                        <!-- Text Files Import Option -->
                        <Border Grid.Column="1" Style="{StaticResource StepCardStyle}"
                                Cursor="Hand" MouseDown="SelectTextImport_Click">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="📄" FontSize="48" HorizontalAlignment="Center"/>
                                <TextBlock Text="Text Files" FontSize="18" FontWeight="SemiBold" 
                                           Foreground="{DynamicResource TextBrush}" 
                                           HorizontalAlignment="Center" Margin="0,12,0,8"/>
                                <TextBlock Text="Import multiple .txt files. Each file becomes a separate prompt." 
                                           FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" 
                                           TextAlignment="Center" TextWrapping="Wrap"/>
                                <Button Content="Select Text Files" 
                                        Style="{StaticResource ModernButtonStyle}"
                                        Margin="0,20,0,0" Click="SelectTextImport_Click"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Download Template -->
                    <Border Background="{DynamicResource SurfaceBrush}" 
                            BorderBrush="{DynamicResource AccentBrush}" BorderThickness="2"
                            CornerRadius="8" Padding="16" Margin="0,32,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="💡" FontSize="24" 
                                       VerticalAlignment="Center" Margin="0,0,12,0"/>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Don't have a CSV file yet?" 
                                           FontSize="14" FontWeight="SemiBold" 
                                           Foreground="{DynamicResource TextBrush}"/>
                                <TextBlock Text="Download our template to get started quickly" 
                                           FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                            <Button Grid.Column="2" Content="📥 Download Template" 
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Click="DownloadTemplate_Click"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Step 2: Configure Import (CSV) -->
            <Border x:Name="Step2Panel" Style="{StaticResource StepCardStyle}" 
                    Visibility="Collapsed">
                <StackPanel>
                    <TextBlock Text="Step 2: Review Import Data" 
                               FontSize="20" FontWeight="SemiBold" 
                               Foreground="{DynamicResource TextBrush}" Margin="0,0,0,8"/>
                    <TextBlock x:Name="Step2Description" 
                               Text="Review the data before importing" 
                               FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}" 
                               Margin="0,0,0,20"/>

                    <!-- File Info -->
                    <Border Background="{DynamicResource SurfaceBrush}" 
                            BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1"
                            CornerRadius="8" Padding="16" Margin="0,0,0,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Selected File:" 
                                       FontWeight="SemiBold" Foreground="{DynamicResource TextBrush}" 
                                       Margin="0,0,12,8"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="SelectedFileText" 
                                       Text="No file selected" 
                                       Foreground="{DynamicResource TextSecondaryBrush}" 
                                       TextWrapping="Wrap" Margin="0,0,0,8"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Prompts Found:" 
                                       FontWeight="SemiBold" Foreground="{DynamicResource TextBrush}" 
                                       Margin="0,0,12,0"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="PromptsCountText" 
                                       Text="0" 
                                       Foreground="{DynamicResource TextSecondaryBrush}"/>
                        </Grid>
                    </Border>

                    <!-- Preview DataGrid -->
                    <TextBlock Text="Preview (first 5 rows):" 
                               FontSize="14" FontWeight="SemiBold" 
                               Foreground="{DynamicResource TextBrush}" Margin="0,0,0,12"/>
                    <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1"
                            CornerRadius="8" Background="{DynamicResource SurfaceBrush}">
                        <DataGrid x:Name="PreviewDataGrid" 
                                  AutoGenerateColumns="True"
                                  IsReadOnly="True"
                                  MaxHeight="250"
                                  GridLinesVisibility="Horizontal"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  HeadersVisibility="Column"
                                  CanUserReorderColumns="False"
                                  CanUserSortColumns="False"/>
                    </Border>

                    <!-- Options -->
                    <StackPanel Margin="0,20,0,0">
                        <CheckBox x:Name="SkipDuplicatesCheckBox" 
                                  Content="Skip duplicates (based on title)" 
                                  Foreground="{DynamicResource TextBrush}" 
                                  FontSize="14" Margin="0,0,0,12"/>
                        <CheckBox x:Name="OverwriteExistingCheckBox" 
                                  Content="Overwrite existing prompts with same title" 
                                  Foreground="{DynamicResource TextBrush}" 
                                  FontSize="14"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Step 3: Import Progress & Results -->
            <Border x:Name="Step3Panel" Style="{StaticResource StepCardStyle}" 
                    Visibility="Collapsed">
                <StackPanel>
                    <TextBlock Text="Step 3: Import Complete!" 
                               FontSize="20" FontWeight="SemiBold" 
                               Foreground="{DynamicResource TextBrush}" Margin="0,0,0,32"/>

                    <!-- Success Icon -->
                    <TextBlock x:Name="ResultIcon" Text="✅" FontSize="72" 
                               HorizontalAlignment="Center" Margin="0,0,0,24"/>

                    <!-- Results Summary -->
                    <Border Background="{DynamicResource SurfaceBrush}" 
                            BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1"
                            CornerRadius="8" Padding="24">
                        <StackPanel>
                            <TextBlock Text="Import Summary" FontSize="18" FontWeight="SemiBold" 
                                       Foreground="{DynamicResource TextBrush}" 
                                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Total Processed -->
                                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                    <TextBlock x:Name="TotalProcessedText" Text="0" 
                                               FontSize="32" FontWeight="Bold" 
                                               Foreground="{DynamicResource AccentBrush}" 
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Total Processed" FontSize="14" 
                                               Foreground="{DynamicResource TextSecondaryBrush}" 
                                               HorizontalAlignment="Center"/>
                                </StackPanel>

                                <!-- Successful -->
                                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                    <TextBlock x:Name="SuccessfulText" Text="0" 
                                               FontSize="32" FontWeight="Bold" 
                                               Foreground="#4CAF50" 
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Successful" FontSize="14" 
                                               Foreground="{DynamicResource TextSecondaryBrush}" 
                                               HorizontalAlignment="Center"/>
                                </StackPanel>

                                <!-- Failed -->
                                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                    <TextBlock x:Name="FailedText" Text="0" 
                                               FontSize="32" FontWeight="Bold" 
                                               Foreground="#F44336" 
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Failed" FontSize="14" 
                                               Foreground="{DynamicResource TextSecondaryBrush}" 
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Error Details (if any) -->
                    <Border x:Name="ErrorDetailsPanel" Visibility="Collapsed"
                            Background="{DynamicResource SurfaceBrush}" 
                            BorderBrush="#F44336" BorderThickness="2"
                            CornerRadius="8" Padding="16" Margin="0,20,0,0">
                        <StackPanel>
                            <TextBlock Text="⚠️ Errors Encountered" FontSize="16" FontWeight="SemiBold" 
                                       Foreground="#F44336" Margin="0,0,0,12"/>
                            <ScrollViewer MaxHeight="150" VerticalScrollBarVisibility="Auto">
                                <TextBlock x:Name="ErrorDetailsText" 
                                           Text="" 
                                           FontSize="12" FontFamily="Consolas"
                                           Foreground="{DynamicResource TextSecondaryBrush}" 
                                           TextWrapping="Wrap"/>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Footer Buttons -->
        <Border Grid.Row="2" Background="{DynamicResource SurfaceBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0"
                Padding="24,16">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button x:Name="BackButton" Content="← Back" 
                            Style="{StaticResource SecondaryButtonStyle}" 
                            Width="120" Visibility="Collapsed"
                            Click="BackButton_Click"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="CancelButton" Content="Cancel" 
                            Style="{StaticResource SecondaryButtonStyle}" 
                            Width="120" Margin="0,0,12,0"
                            Click="CancelButton_Click"/>
                    <Button x:Name="NextButton" Content="Next →" 
                            Style="{StaticResource ModernButtonStyle}" 
                            Width="150" IsEnabled="False"
                            Click="NextButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>