<Window x:Class="PromptVault.Dialogs.ExportFormatDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Export Format"
        Height="550"
        Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{DynamicResource BackgroundBrush}">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="📤 Export Prompts"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="{DynamicResource TextBrush}"/>
            <TextBlock Text="Choose your preferred export format"
                       FontSize="13"
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Format Options -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- CSV -->
                <RadioButton x:Name="CSVRadio"
                             GroupName="ExportFormat"
                             IsChecked="True"
                             Style="{StaticResource ExportFormatRadioStyle}"
                             Margin="0,0,0,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="📊" FontSize="32" Margin="0,0,15,0" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="CSV (Spreadsheet)" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource TextBrush}"/>
                            <TextBlock Text="Best for Excel, Google Sheets, and data analysis"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </RadioButton>

                <!-- JSON -->
                <RadioButton x:Name="JSONRadio"
                             GroupName="ExportFormat"
                             Style="{StaticResource ExportFormatRadioStyle}"
                             Margin="0,0,0,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="🔧" FontSize="32" Margin="0,0,15,0" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="JSON (Developer)" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource TextBrush}"/>
                            <TextBlock Text="Perfect for APIs, web apps, and programming"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </RadioButton>

                <!-- Markdown -->
                <RadioButton x:Name="MarkdownRadio"
                             GroupName="ExportFormat"
                             Style="{StaticResource ExportFormatRadioStyle}"
                             Margin="0,0,0,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="📝" FontSize="32" Margin="0,0,15,0" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Markdown (Documentation)" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource TextBrush}"/>
                            <TextBlock Text="Great for GitHub, Notion, Obsidian, and wikis"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </RadioButton>

                <!-- HTML -->
                <RadioButton x:Name="HTMLRadio"
                             GroupName="ExportFormat"
                             Style="{StaticResource ExportFormatRadioStyle}"
                             Margin="0,0,0,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="🌐" FontSize="32" Margin="0,0,15,0" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="HTML (Web Page)" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource TextBrush}"/>
                            <TextBlock Text="Beautiful standalone webpage with styling"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </RadioButton>

                <!-- XML -->
                <RadioButton x:Name="XMLRadio"
                             GroupName="ExportFormat"
                             Style="{StaticResource ExportFormatRadioStyle}"
                             Margin="0,0,0,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="⚙️" FontSize="32" Margin="0,0,15,0" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="XML (Structured Data)" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource TextBrush}"/>
                            <TextBlock Text="Industry standard for data exchange"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </RadioButton>

                <!-- YAML -->
                <RadioButton x:Name="YAMLRadio"
                             GroupName="ExportFormat"
                             Style="{StaticResource ExportFormatRadioStyle}"
                             Margin="0,0,0,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="📋" FontSize="32" Margin="0,0,15,0" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="YAML (Configuration)" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource TextBrush}"/>
                            <TextBlock Text="Human-readable format for configs and DevOps"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </RadioButton>

                <!-- Plain Text -->
                <RadioButton x:Name="PlainTextRadio"
                             GroupName="ExportFormat"
                             Style="{StaticResource ExportFormatRadioStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="📄" FontSize="32" Margin="0,0,15,0" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Plain Text (Simple)" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource TextBrush}"/>
                            <TextBlock Text="Basic text format readable anywhere"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </RadioButton>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="0,20,0,0"
                Margin="0,20,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel"
                        Style="{DynamicResource SecondaryButtonStyle}"
                        Padding="20,10"
                        Margin="0,0,10,0"
                        Click="CancelButton_Click"/>
                <Button Content="📤 Export"
                        Style="{DynamicResource PrimaryButtonStyle}"
                        Padding="20,10"
                        Click="ExportButton_Click"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
