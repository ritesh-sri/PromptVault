<Window x:Class="PromptVault.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="PromptVault" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}"
        MinHeight="500" MinWidth="900">

    <Window.Resources>
        <!-- Light Theme Colors -->
        <SolidColorBrush x:Key="LightBackground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="LightSurface" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="LightBorder" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="LightText" Color="#212121"/>
        <SolidColorBrush x:Key="LightTextSecondary" Color="#757575"/>
        <SolidColorBrush x:Key="LightAccent" Color="#2196F3"/>
        <SolidColorBrush x:Key="LightHover" Color="#EEEEEE"/>

        <!-- Dark Theme Colors -->
        <SolidColorBrush x:Key="DarkBackground" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="DarkSurface" Color="#2D2D2D"/>
        <SolidColorBrush x:Key="DarkBorder" Color="#3E3E3E"/>
        <SolidColorBrush x:Key="DarkText" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="DarkTextSecondary" Color="#B0B0B0"/>
        <SolidColorBrush x:Key="DarkAccent" Color="#4FC3F7"/>
        <SolidColorBrush x:Key="DarkHover" Color="#383838"/>

        <!-- Dynamic Theme Resources (Default: Light) -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="TextBrush" Color="#212121"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#757575"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#2196F3"/>
        <SolidColorBrush x:Key="HoverBrush" Color="#EEEEEE"/>

        <!-- Card Style -->
        <Style x:Key="PromptCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource HoverBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="4,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource SurfaceBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- App Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="📦" FontSize="24" Margin="0,0,10,0"/>
                    <TextBlock Text="PromptVault" FontSize="20" FontWeight="SemiBold" 
                               Foreground="{DynamicResource TextBrush}" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Search Box -->
                <TextBox Grid.Column="1" x:Name="SearchBox" 
                         Style="{StaticResource ModernTextBoxStyle}"
                         Width="400" HorizontalAlignment="Center"
                         Text="🔍 Search prompts..." VerticalAlignment="Center"/>

                <!-- Header Actions -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="ThemeToggleButton" Content="🌙" 
                            Style="{StaticResource ModernButtonStyle}" 
                            Width="40" Height="40" Margin="0,0,10,0"
                            Click="ThemeToggleButton_Click" ToolTip="Toggle Dark/Light Mode"/>
                    <Button x:Name="SettingsButton" Content="⚙️" 
                            Style="{StaticResource ModernButtonStyle}" 
                            Width="40" Height="40"
                            Click="SettingsButton_Click" ToolTip="Settings"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Sidebar - Filters -->
            <Border Grid.Column="0" Background="{DynamicResource SurfaceBrush}" 
                    BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,1,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <!-- AI Platform Filter -->
                        <TextBlock Text="🤖 AI Platform" FontSize="16" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextBrush}" Margin="0,0,0,12"/>
                        <ListBox x:Name="AIPlatformList" BorderThickness="0" Background="Transparent"
                                 Foreground="{DynamicResource TextBrush}" Margin="0,0,0,24">
                            <ListBoxItem Content="All" IsSelected="True"/>
                            <ListBoxItem Content="ChatGPT"/>
                            <ListBoxItem Content="Claude"/>
                            <ListBoxItem Content="Gemini"/>
                            <ListBoxItem Content="Copilot"/>
                            <ListBoxItem Content="Unknown"/>
                        </ListBox>

                        <!-- Model Version Filter -->
                        <TextBlock Text="📦 Model Version" FontSize="16" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextBrush}" Margin="0,0,0,12"/>
                        <ListBox x:Name="ModelVersionList" BorderThickness="0" Background="Transparent"
                                 Foreground="{DynamicResource TextBrush}" Margin="0,0,0,24">
                            <ListBoxItem Content="All" IsSelected="True"/>
                            <ListBoxItem Content="GPT-4"/>
                            <ListBoxItem Content="GPT-3.5"/>
                            <ListBoxItem Content="Claude 3.5"/>
                            <ListBoxItem Content="Claude 3"/>
                            <ListBoxItem Content="Gemini Pro"/>
                        </ListBox>

                        <!-- Tags Filter -->
                        <TextBlock Text="🏷️ Tags" FontSize="16" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextBrush}" Margin="0,0,0,12"/>
                        <ListBox x:Name="TagsList" BorderThickness="0" Background="Transparent"
                                 Foreground="{DynamicResource TextBrush}" Margin="0,0,0,24">
                            <ListBoxItem Content="All" IsSelected="True"/>
                            <ListBoxItem Content="Coding"/>
                            <ListBoxItem Content="Writing"/>
                            <ListBoxItem Content="Analysis"/>
                            <ListBoxItem Content="Email"/>
                            <ListBoxItem Content="Creative"/>
                        </ListBox>

                        <!-- Favorites -->
                        <CheckBox x:Name="FavoritesOnly" Content="⭐ Favorites Only" 
                                  Foreground="{DynamicResource TextBrush}" FontSize="14"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Right Content Area -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Action Bar -->
                <Border Grid.Row="0" Background="{DynamicResource BackgroundBrush}" 
                        Padding="20,16" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="📊 My Prompts" FontSize="18" FontWeight="SemiBold" 
                                       Foreground="{DynamicResource TextBrush}" VerticalAlignment="Center"/>
                            <TextBlock x:Name="PromptCountText" Text="(24)" FontSize="16" 
                                       Foreground="{DynamicResource TextSecondaryBrush}" 
                                       Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button x:Name="ImportButton" Content="📥 Import" 
                                    Style="{StaticResource ModernButtonStyle}" 
                                    Margin="0,0,10,0" Click="ImportButton_Click"/>
                            <Button x:Name="AddFromClipboardButton" Content="📋 Add from Clipboard" 
                                    Style="{StaticResource ModernButtonStyle}" 
                                    Margin="0,0,10,0" Click="AddFromClipboardButton_Click"/>
                            <Button x:Name="NewPromptButton" Content="➕ New Prompt" 
                                    Style="{StaticResource ModernButtonStyle}"
                                    Click="NewPromptButton_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Prompts List -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                              Background="{DynamicResource BackgroundBrush}">
                    <StackPanel x:Name="PromptsContainer" Margin="20">
                        <!-- Sample Prompt Card 1 -->
                        <Border Style="{StaticResource PromptCardStyle}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Title Row -->
                                <Grid Grid.Row="0" Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="📝 Code Review Assistant" 
                                               FontSize="16" FontWeight="SemiBold" 
                                               Foreground="{DynamicResource TextBrush}"/>
                                    <Button Grid.Column="1" Content="⭐" Background="Transparent" 
                                            BorderThickness="0" FontSize="18" Cursor="Hand"/>
                                </Grid>

                                <!-- Tags & Model Row -->
                                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
                                    <Border Background="#E3F2FD" CornerRadius="4" Padding="8,4" Margin="0,0,8,0">
                                        <TextBlock Text="Claude 3.5 Sonnet" FontSize="12" Foreground="#1976D2"/>
                                    </Border>
                                    <Border Background="#FFF3E0" CornerRadius="4" Padding="8,4" Margin="0,0,8,0">
                                        <TextBlock Text="🏷️ Coding" FontSize="12" Foreground="#E65100"/>
                                    </Border>
                                    <Border Background="#F3E5F5" CornerRadius="4" Padding="8,4">
                                        <TextBlock Text="🏷️ Review" FontSize="12" Foreground="#7B1FA2"/>
                                    </Border>
                                </StackPanel>

                                <!-- Preview Text -->
                                <TextBlock Grid.Row="2" 
                                           Text="Review code for bugs, security issues, performance problems, and style improvements. Provide detailed feedback with suggestions..."
                                           FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}" 
                                           TextWrapping="Wrap" Margin="0,0,0,12"/>

                                <!-- Footer Row -->
                                <Grid Grid.Row="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="📅 2 days ago" FontSize="12" 
                                               Foreground="{DynamicResource TextSecondaryBrush}" 
                                               VerticalAlignment="Center"/>
                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <Button Content="📋 Copy" Background="#4CAF50" Foreground="White"
                                                BorderThickness="0" Padding="12,6" FontSize="12" Cursor="Hand"
                                                Margin="0,0,8,0">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="4" 
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                        <Button Content="✏️" Background="Transparent" BorderThickness="0" 
                                                FontSize="16" Cursor="Hand" Margin="0,0,8,0"/>
                                        <Button Content="🗑️" Background="Transparent" BorderThickness="0" 
                                                FontSize="16" Cursor="Hand"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Border>

                        <!-- Sample Prompt Card 2 -->
                        <Border Style="{StaticResource PromptCardStyle}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0" Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="✍️ Blog Post Generator" 
                                               FontSize="16" FontWeight="SemiBold" 
                                               Foreground="{DynamicResource TextBrush}"/>
                                    <Button Grid.Column="1" Content="☆" Background="Transparent" 
                                            BorderThickness="0" FontSize="18" Cursor="Hand"/>
                                </Grid>

                                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
                                    <Border Background="#E8F5E9" CornerRadius="4" Padding="8,4" Margin="0,0,8,0">
                                        <TextBlock Text="ChatGPT-4" FontSize="12" Foreground="#2E7D32"/>
                                    </Border>
                                    <Border Background="#FCE4EC" CornerRadius="4" Padding="8,4" Margin="0,0,8,0">
                                        <TextBlock Text="🏷️ Writing" FontSize="12" Foreground="#C2185B"/>
                                    </Border>
                                    <Border Background="#FFF9C4" CornerRadius="4" Padding="8,4">
                                        <TextBlock Text="🏷️ SEO" FontSize="12" Foreground="#F57F17"/>
                                    </Border>
                                </StackPanel>

                                <TextBlock Grid.Row="2" 
                                           Text="Generate engaging blog posts with SEO optimization. Include headers, meta descriptions, and keyword suggestions..."
                                           FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}" 
                                           TextWrapping="Wrap" Margin="0,0,0,12"/>

                                <Grid Grid.Row="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="📅 1 week ago" FontSize="12" 
                                               Foreground="{DynamicResource TextSecondaryBrush}" 
                                               VerticalAlignment="Center"/>
                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <Button Content="📋 Copy" Background="#4CAF50" Foreground="White"
                                                BorderThickness="0" Padding="12,6" FontSize="12" Cursor="Hand"
                                                Margin="0,0,8,0">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="4" 
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                        <Button Content="✏️" Background="Transparent" BorderThickness="0" 
                                                FontSize="16" Cursor="Hand" Margin="0,0,8,0"/>
                                        <Button Content="🗑️" Background="Transparent" BorderThickness="0" 
                                                FontSize="16" Cursor="Hand"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Border>

                        <!-- Placeholder for more prompts -->
                        <TextBlock Text="+ More prompts will appear here..." 
                                   FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}" 
                                   HorizontalAlignment="Center" Margin="0,20,0,0"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</Window>