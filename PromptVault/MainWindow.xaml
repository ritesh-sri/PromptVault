<Window x:Class="PromptVault.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PromptVault" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}"
        MinHeight="500" MinWidth="900">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="64"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource SurfaceBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- App Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="📦" FontSize="28" Margin="0,0,12,0"/>
                    <TextBlock Text="PromptVault" FontSize="22" FontWeight="Bold" 
                               Foreground="{DynamicResource TextBrush}" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Search Box -->
                <Border Grid.Column="1" Width="450" HorizontalAlignment="Center"
                        Background="{DynamicResource BackgroundBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="10"
                        VerticalAlignment="Center">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="🔍" FontSize="18" 
                                   Margin="12,0,8,0" VerticalAlignment="Center"
                                   Foreground="{DynamicResource TextSecondaryBrush}"/>

                        <TextBox Grid.Column="1" x:Name="SearchBox"
                                 Background="Transparent"
                                 Foreground="{DynamicResource TextSecondaryBrush}"
                                 BorderThickness="0"
                                 Padding="0,10"
                                 FontSize="14"
                                 VerticalAlignment="Center"
                                 Text="Search prompts..."/>
                    </Grid>
                </Border>

                <!-- Header Actions -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="12,0,0,0">
                    <Button x:Name="StatisticsButton"
                            Content="📊"
                            Style="{DynamicResource IconButtonStyle}"
                            Margin="0,0,8,0"
                            Click="StatisticsButton_Click"
                            ToolTip="View statistics dashboard"/>   

                    <Button x:Name="ThemeToggleButton" 
                            Content="🌙"
                            Style="{StaticResource IconButtonStyle}"
                            Click="ThemeToggleButton_Click" 
                            ToolTip="Toggle Dark/Light Mode"
                            Margin="0,0,8,0"/>

                    <Button x:Name="SettingsButton" 
                            Content="⚙️"
                            Style="{StaticResource IconButtonStyle}"
                            Click="SettingsButton_Click" 
                            ToolTip="Settings"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Sidebar - Filters -->
            <Border Grid.Column="0" Background="{DynamicResource SurfaceBrush}" 
                    BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,1,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <!-- AI Platform Filter -->
                        <TextBlock Text="🤖 AI Platform" FontSize="15" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextBrush}" Margin="0,0,0,12"/>
                        <ListBox x:Name="AIPlatformList" BorderThickness="0" Background="Transparent"
                                 Foreground="{DynamicResource TextBrush}" Margin="0,0,0,24">
                            <ListBoxItem Content="All" IsSelected="True"/>
                            <ListBoxItem Content="ChatGPT"/>
                            <ListBoxItem Content="Claude"/>
                            <ListBoxItem Content="Gemini"/>
                            <ListBoxItem Content="Copilot"/>
                            <ListBoxItem Content="Unknown"/>
                        </ListBox>

                        <!-- Model Version Filter -->
                        <TextBlock Text="📦 Model Version" FontSize="15" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextBrush}" Margin="0,0,0,12"/>
                        <ListBox x:Name="ModelVersionList" BorderThickness="0" Background="Transparent"
                                 Foreground="{DynamicResource TextBrush}" Margin="0,0,0,24">
                            <ListBoxItem Content="All" IsSelected="True"/>
                            <ListBoxItem Content="GPT-4"/>
                            <ListBoxItem Content="GPT-3.5"/>
                            <ListBoxItem Content="Claude 3.5"/>
                            <ListBoxItem Content="Claude 3"/>
                            <ListBoxItem Content="Gemini Pro"/>
                        </ListBox>

                        <!-- Tags Filter -->
                        <TextBlock Text="🏷️ Tags" FontSize="15" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextBrush}" Margin="0,0,0,12"/>
                        <ListBox x:Name="TagsList" BorderThickness="0" Background="Transparent"
                                 Foreground="{DynamicResource TextBrush}" Margin="0,0,0,24">
                            <ListBoxItem Content="All" IsSelected="True"/>
                            <ListBoxItem Content="Coding"/>
                            <ListBoxItem Content="Writing"/>
                            <ListBoxItem Content="Analysis"/>
                            <ListBoxItem Content="Email"/>
                            <ListBoxItem Content="Creative"/>
                        </ListBox>

                        <!-- Favorites -->
                        <CheckBox x:Name="FavoritesOnly" Content="⭐ Favorites Only" 
                                  Foreground="{DynamicResource TextBrush}" FontSize="14" FontWeight="SemiBold"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Right Content Area -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Action Bar -->
                <Border Grid.Row="0" Background="{DynamicResource BackgroundBrush}" 
                        Padding="24,18" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="📊 My Prompts" FontSize="20" FontWeight="Bold" 
                                       Foreground="{DynamicResource TextBrush}" VerticalAlignment="Center"/>
                            <TextBlock x:Name="PromptCountText" Text="(0)" FontSize="18" 
                                       Foreground="{DynamicResource TextSecondaryBrush}" 
                                       Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button x:Name="ImportButton" Content="📥 Import" 
                                    Style="{StaticResource ModernButtonStyle}" 
                                    Margin="0,0,10,0" Click="ImportButton_Click"/>
                            <Button x:Name="AddFromClipboardButton" Content="📋 Clipboard" 
                                    Style="{StaticResource ModernButtonStyle}" 
                                    Margin="0,0,10,0" Click="AddFromClipboardButton_Click"/>
                            <Button x:Name="NewPromptButton" Content="➕ New Prompt" 
                                    Style="{StaticResource ModernButtonStyle}"
                                    Click="NewPromptButton_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Prompts List -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                              Background="{DynamicResource BackgroundBrush}">
                    <StackPanel x:Name="PromptsContainer" Margin="24"/>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</Window>